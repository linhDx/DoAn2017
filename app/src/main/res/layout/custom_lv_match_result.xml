<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:background="@color/black">

    <TextView
        android:id="@+id/tv_competitions_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="8pt"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:text="18:30"
        android:layout_marginRight="20dp"/>
    <TextView
        android:id="@+id/tv_competitions_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_competitions_time"
        android:text="27-08-1994"
        android:textSize="6pt"
        android:textColor="@color/white"/>
    <View
        android:id="@+id/line"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/tv_competitions_date"></View>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/line">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TableRow>
                <TextView
                    android:id="@+id/tv_competitions_goal_home"
                    android:text="4"
                    android:layout_column="1"
                    android:textSize="8pt"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/tv_competitions_home_name"
                    android:layout_column="2"
                    android:textSize="8pt"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/tv_competitions_goal_away"
                    android:text="3"
                    android:layout_column="1"
                    android:textSize="8pt"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/tv_competitions_away_name"
                    android:layout_column="2"
                    android:textSize="8pt"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_play_video"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/video_play"
        android:layout_marginTop="15dp"/>
</RelativeLayout>