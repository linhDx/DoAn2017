<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TableRow>
            <TextView
                android:text="Name"
                android:layout_column="1"
                android:textSize="8pt"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:text=":"
                android:layout_column="2"
                android:textSize="8pt"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tv_team_player_name"
                android:layout_column="3"
                android:textSize="8pt"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Position"
                android:layout_column="1"
                android:textSize="8pt"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:text=":"
                android:layout_column="2"
                android:textSize="8pt"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tv_team_player_position"
                android:layout_column="3"
                android:textSize="8pt"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Jersey Number"
                android:layout_column="1"
                android:textSize="8pt"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:text=":"
                android:layout_column="2"
                android:textSize="8pt"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tv_team_player_jersey_number"
                android:layout_column="3"
                android:textSize="8pt"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Date Of Birth"
                android:layout_column="1"
                android:textSize="8pt"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:text=":"
                android:layout_column="2"
                android:textSize="8pt"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tv_team_player_birth"
                android:layout_column="3"
                android:textSize="8pt"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Nationality"
                android:layout_column="1"
                android:textSize="8pt"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:text=":"
                android:layout_column="2"
                android:textSize="8pt"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tv_team_player_nationality"
                android:layout_column="3"
                android:textSize="8pt"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Contrac Until"
                android:layout_column="1"
                android:textSize="8pt"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:text=":"
                android:layout_column="2"
                android:textSize="8pt"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tv_team_player_contract_until"
                android:layout_column="3"
                android:textSize="8pt"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"/>
        </TableRow>
    </TableLayout>
</LinearLayout>